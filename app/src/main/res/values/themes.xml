<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="MyThemeOrange" parent="MyBaseTheme">
        <item name="nasaBackgroundColor">@color/yellow_900</item>
        <item name="nasaPrimaryColor">@color/yellow_50</item>
        <item name="nasaPrimaryDarkColor">@color/black</item>
        <item name="swipeIndicatorActive">@color/red</item>
        <item name="swipeIndicatorPassive">@color/orange</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleBlackBlue</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyleOrange</item>
    </style>

    <style name="MyThemeBlueGray" parent="MyBaseTheme">
        <item name="nasaBackgroundColor">@color/blue_grey_900</item>
        <item name="nasaPrimaryColor">@color/blue_grey_50</item>
        <item name="colorOnSurfaceVariant">@color/red</item>
        <item name="nasaPrimaryDarkColor">@color/black</item>
        <item name="swipeIndicatorActive">@color/blue_grey_900</item>
        <item name="swipeIndicatorPassive">@color/blue_grey_600</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleBlackBlue</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyleOrange</item>
    </style>

    <style name="MyThemeIndigo" parent="MyBaseTheme">
        <item name="nasaBackgroundColor">@color/indigo_900</item>
        <item name="nasaPrimaryColor">@color/indigo_50</item>
        <item name="nasaPrimaryDarkColor">@color/black</item>
        <item name="swipeIndicatorActive">@color/indigo_600</item>
        <item name="swipeIndicatorPassive">@color/indigo_900</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyleBlackBlue</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyleOrange</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="MyThemeSplash" parent="MyBaseTheme">
        <item name="nasaBackgroundColor">@color/white</item>
        <item name="nasaPrimaryColor">@color/white</item>
        <item name="nasaPrimaryDarkColor">@color/white</item>
        <item name="swipeIndicatorActive">@color/white</item>
        <item name="swipeIndicatorPassive">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="nasaBackgroundColor">@color/indigo_900</item>
        <item name="nasaPrimaryColor">@color/indigo_50</item>
        <item name="nasaPrimaryDarkColor">@color/black</item>
        <item name="swipeIndicatorActive">@color/indigo_600</item>
        <item name="swipeIndicatorPassive">@color/indigo_900</item>
        <item name="android:navigationBarColor">?attr/nasaBackgroundColor</item>
        <item name="colorPrimary">?attr/nasaBackgroundColor</item>
        <item name="colorOnPrimary">?attr/nasaPrimaryColor</item>
        <item name="colorPrimaryContainer">?attr/nasaBackgroundColor</item>
        <item name="colorOnPrimaryContainer">?attr/nasaBackgroundColor</item>
        <item name="colorPrimaryInverse">?attr/nasaBackgroundColor</item>
        <item name="colorSecondary">?attr/nasaBackgroundColor</item>
        <item name="colorOnSecondary">?attr/nasaPrimaryColor</item>
        <item name="colorOnSurfaceVariant">@color/red</item>
        <item name="colorSecondaryContainer">?attr/nasaBackgroundColor</item>
        <item name="colorOnSecondaryContainer">?attr/nasaBackgroundColor</item>
        <item name="colorTertiary">?attr/nasaBackgroundColor</item>
        <item name="colorOnTertiary">?attr/nasaPrimaryColor</item>
        <item name="colorTertiaryContainer">?attr/nasaBackgroundColor</item>
        <item name="colorOnTertiaryContainer">?attr/nasaBackgroundColor</item>
        <item name="android:statusBarColor">?attr/nasaBackgroundColor</item>
        <item name="chipStyle">@style/myChipStyle</item>
        <item name="bottomAppBarStyle">@style/myBottomAppBarStyle</item>
        <item name="tabStyle">@style/myTabStyle</item>
        <item name="textAppearanceHeadline1">@style/MyTextAppearanceHeadline1</item>
        <item name="materialButtonStyle">@style/myMaterialButtonStyle</item>
        <item name="materialCardViewStyle">@style/myMaterialCardViewStyle</item>
        <item name="bottomNavigationStyle">@style/myBottomNavigationStyle</item>
    </style>
</resources>